{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@pages/*": [
        "./components/home/*",
        "./components/form/*",
        "./components/playPages/lobby/*",
        "./components/playPages/game/*"
      ],
      "@components/*": [
        "./components/home/subcomponents/*",
        "./components/form/subcomponents/*",
        "./components/playPages/lobby/subcomponents/*",
        "./components/playPages/game/subcomponents/*"
      ],
      "@utils/*": ["./utils/*"],
      "@types/*": ["./types/*"]
    },
    "target": "ES2017"
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
