{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "outDir": "./dist",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "paths": {
      "@api/*": ["./src/api/*"],
      "@socket/*": ["./src/socket/*"],
      "@services/*": ["./src/service/*"],
      "@actionHandlers/*": ["./src/actionHandler/*"],
      "@repositorys/*": ["./src/repository/*"],
      "@entitys/*": ["./src/entity/*"],
      "@utils/*": ["./src/utils/*"],
      "@resources/*": ["./resources/*"],
      "@tests/*": ["./test/*"]
    }
  },
  "include": [
    "src/**/*",
    "test/**/*"
  ],
  "exclude": [
    "node_modules",
    "src/**/*.spec.ts",
    "src/**/*.test.ts"
  ]
}